
string floattostring (float f)
{string exp;
 int e=0;
  while (abs(f)>=10)
 {e+=1;
  f/=10;
  }
  while(abs(f)<1)
  {e-=1;
   f*=10;
   }
  exp=FormatNum("%10.4f e",f);
  exp+=FormatNum("%02d",e);
  return exp;
}


task main()
{float a,c;
