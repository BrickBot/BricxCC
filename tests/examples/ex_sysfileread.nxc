task main()
{
  FileReadWriteType frArgs;
  frArgs.FileHandle = foArgs.FileHandle;
  frArgs.Length = 12; // number of bytes to read
  SysFileRead(frArgs);
  if (frArgs.Result == NO_ERR) {
    TextOut(0, LCD_LINE1, frArgs.Buffer);
