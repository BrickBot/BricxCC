#download "letters.ric"

int Values[] = {0};
void Display( int n )
{
  Values[0]=n*10;
  GraphicOutEx(Values[0], 0, "letters.ric" , Values, DRAW_OPT_CLEAR_WHOLE_SCREEN);
  Wait(MS_200);
}

task main()
{
  while( true )
  {
    for( int i=0; i<9; i++ )
      Display( i );
  }
}


