#include "command.h"
#include "sound.h"
// When run, this program alternates between task A and task B until halted
// by pressing the gray button.

task B();

void beep(const int tone)
{
   PlayTone(tone, MS_500);
   Wait(SEC_1);
}

task A()
{
   beep(TONE_C4);
   ExitTo(B);
}

task B()
{
   beep(TONE_C6);
   ExitTo(A);
}

task main()
{
   // ExitTo(B) would work as well here.
   Precedes(B);
}
